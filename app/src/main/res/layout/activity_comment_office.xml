<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_comment_office"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ImageView-->
    <!--android:id="@+id/comment_background"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->
    <cn.lawwing.tencentx5demo.PaintView
        android:id="@+id/pv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- 顶部菜单栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="#8b8b8b"
            android:textSize="32px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cancle"
                android:layout_width="90px"
                android:layout_height="90px"
                android:contentDescription="@null"
                android:padding="20px"
                android:scaleType="centerInside"
                android:src="@mipmap/comment_cancle_cannot" />

            <ImageView
                android:id="@+id/iv_redo"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_marginLeft="10px"
                android:contentDescription="@null"
                android:padding="20px"
                android:scaleType="centerInside"
                android:src="@mipmap/comment_redo_cannot" />
        </LinearLayout>

        <TextView
            android:id="@+id/complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="完成"
            android:textColor="#32b4ff"
            android:textSize="32px" />
    </RelativeLayout>

    <!-- 左边颜色选择 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_leftcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_comment_redcolor"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginBottom="20px"
                android:contentDescription="@null"
                android:src="@mipmap/comment_red_select" />

            <ImageView
                android:id="@+id/iv_comment_bluecolor"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginBottom="20px"
                android:contentDescription="@null"
                android:src="@mipmap/comment_blue_unselect" />

            <ImageView
                android:id="@+id/iv_comment_greencolor"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginBottom="20px"
                android:contentDescription="@null"
                android:src="@mipmap/comment_green_unselect" />

            <ImageView
                android:id="@+id/iv_comment_blackcolor"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginBottom="20px"
                android:contentDescription="@null"
                android:src="@mipmap/comment_black_unselect" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_comment_loadmorecolor"
            android:layout_width="68px"
            android:layout_height="68px"
            android:contentDescription="@null"
            android:src="@mipmap/comment_colour_back" />
    </LinearLayout>

    <!-- 右边功能选项 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40px"
        android:layout_marginRight="40px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_rightmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_comment_arrow"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginBottom="20px"
                android:contentDescription="@null"
                android:src="@mipmap/comment_arrow_select" />

            <ImageView
                android:id="@+id/iv_comment_text"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginBottom="20px"
                android:contentDescription="@null"
                android:src="@mipmap/comment_text_unselect" />

            <ImageView
                android:id="@+id/iv_comment_rectangle"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_marginBottom="20px"
                android:contentDescription="@null"
                android:src="@mipmap/comment_rectangle_unselect" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_comment_loadmorerightmenu"
            android:layout_width="68px"
            android:layout_height="68px"
            android:contentDescription="@null"
            android:src="@mipmap/comment_closetools" />
    </LinearLayout>
</RelativeLayout>
